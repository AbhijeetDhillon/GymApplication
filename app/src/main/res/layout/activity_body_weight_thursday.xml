<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gymbackg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Shoulder Press"
                android:id="@+id/button11"
                android:textSize="25dp"
                android:onClick="shoulderpress"
                android:background="#00ffffff"
                android:textColor="#ffffff" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button12"
                android:text="Wide PushUps"
                android:textSize="25dp"
                android:onClick="widepushups"
                android:textColor="#ffffff"
                android:background="#00ffffff" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Handstand Pushups"
                android:id="@+id/button13"
                android:textSize="25dp"
                android:nestedScrollingEnabled="false"
                android:onClick="handstandpushups"
                android:textColor="#ffffff"
                android:background="#00ffffff" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Decline Pushups"
                android:id="@+id/button14"
                android:textSize="25dp"
                android:onClick="declinepushups"
                android:textColor="#ffffff"
                android:background="#00ffffff" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
