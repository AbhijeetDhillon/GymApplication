<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gymbackg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Day 1 (Full Body Workout)"
                android:id="@+id/button"
                android:onClick="weightlossmonday"
                android:background="#00ffffff"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="Day 2 (Cardio,Abs)"
                android:id="@+id/button3"
                android:onClick="weightlosstuesday"
                android:background="#00ffffff"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Day 3 (Full Body workout)"
                android:id="@+id/button2"
                android:onClick="weightlosswednesday"
                android:background="#00ffffff"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Day 4 (Rest Day)"
                android:id="@+id/button4"
                android:background="#00ffffff"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Day 5 (Cardio,abs)"
                android:id="@+id/button5"
                android:onClick="weightlossfriday"
                android:background="#00ffffff"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Day 6 (Full Body Workout)"
                android:id="@+id/button6"
                android:onClick="weightlosssaturday"
                android:background="#00ffffff"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="Day 7 (Rest Day)"
                android:id="@+id/button10"
                android:background="#00ffffff"
                android:textColor="#ffffff"
                android:textSize="25dp" />
        </LinearLayout>

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id">
        </com.google.android.gms.ads.AdView>

    </LinearLayout>

</ScrollView>
